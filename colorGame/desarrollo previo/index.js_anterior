function obtengoColor(id, propiedad){
    let element = elementoPorId(id);
    let elementStyle = window.getComputedStyle(element);
    let elementColor = elementStyle.getPropertyValue(propiedad);
    //console.log("****" + elementColor);
    return elementColor;

}
